     //---------------------------GET-ALL-TOUR------------------------
exports.getAllTours = async(req, res) => {

  console.log("hit1");
  try {
    const tours = await Tour.find();
    res.status(200).json({
      status: 'success',
      results: tours.length,
      data: tours
      });
      } catch (err) {
        res.status(404).json({
          status: 'fail',
          message: err
          });
          }
          };
          //--------------------------GET-TOUR-------------------------------------

exports.getTour = async(req, res) => {
  console.log("hit2");
  try {

    const tour = await Tour.findById(req.params.id);
    //SAME AS Tour.findOne({_id:req.params.id})//line 58 mongoose give shortcut
    res.status(200).json({
      status: 'success',
      data: tour
      });
      } catch (err) {
        res.status(404).json({
          status: 'fail',
          message: err
          });
          }
          };
   
          //------------------------------------CREATE-TOUR------------------------


